{% extends 'base.html.twig' %}
{% block body %}

  <div class="container-fluid">
    <h1 class="mt-4">Создать статью</h1>
    <div class="row">
      
      <div class="col-xl-8">
        {% if error is not null %}
            <div class="alert alert-danger" role="alert">
            {{ error }}
            </div>
        {% endif %}
        
        {{ form_start(articleForm, {
                    attr: { class: 'form-signin' }
                }) }}

                <div class="form-group">
                    {{ form_label(articleForm.title, 'Title', {
                        label_attr: { for: 'article_form_title'}
                    }) }}
                    {{ form_widget(articleForm.title, {
                        attr: { placeholder: 'Title', class: 'form-control'}
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_label(articleForm.category, 'Category', {
                        label_attr: { for: 'article_form_title'}
                    }) }}
                    {{ form_widget(articleForm.category, {
                        attr: { placeholder: 'Category', class: 'form-control'}
                    }) }}
                </div>
        
        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Создать</button>
        
        {{ form_end(articleForm)}}
       
      </div>
    </div>
    
  </div>
{% endblock %}
